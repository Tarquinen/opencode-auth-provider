{
  "name": "opencode-auth-provider",
  "version": "0.1.0",
  "description": "Reuse OpenCode authentication & provider logic for clean AI calls in plugins",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node -e \"require('fs').mkdirSync('dist/provider', { recursive: true }); require('fs').copyFileSync('src/provider/models-static.json', 'dist/provider/models-static.json');\"",
    "clean": "rm -rf dist",
    "test": "bun run scripts/run-all-tests.ts",
    "test:e2e": "bun run scripts/test-e2e.ts",
    "test:oauth": "bun run scripts/test-openai-oauth.ts",
    "test:models": "bun run scripts/test-openai-models.ts",
    "test:integration": "bun run scripts/test-openai-oauth-integration.ts",
    "chat": "bun run scripts/chat-with-provider.ts"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.936.0",
    "ai": "^5.0.98",
    "jsonc-parser": "^3.3.1",
    "opencode-anthropic-auth": "0.0.2",
    "opencode-copilot-auth": "0.0.5",
    "opencode-gemini-auth": "^1.1.4",
    "remeda": "^2.32.0",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "typescript": "^5.6.3"
  }
}
